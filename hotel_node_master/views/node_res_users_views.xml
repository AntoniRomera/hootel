<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- views -->

    <record id="node_res_users_view_tree" model="ir.ui.view">
        <field name="name">node.res.users.tree</field>
        <field name="model">node.res.users</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="login"/>
                <field name="backend_id"/>
                <field name="sync_date"/>
                <field name="external_id"/>
            </tree>
        </field>
    </record>

    <!-- actions -->

    <record id="node_res_users_action" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="res_model">node.res.users</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="target">main</field>
    </record>

    <!-- menus -->

</odoo>
